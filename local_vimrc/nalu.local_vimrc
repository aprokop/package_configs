set ts=8

" Nalu separates sources and headers in two directories
au! BufEnter *.C let b:fswitchdst = 'h' | let b:fswitchlocs = 'reg:/src/include/'
au! BufEnter *.h let b:fswitchdst = 'C' | let b:fswitchlocs = 'reg:/include/src/'

" In Nalu, .i files correspond to YAML config files
au! BufEnter *.i set ft=yaml

" Nalu
syn keyword cDefine
    \ ThrowAssert
    \ ThrowRequire
syn keyword cType
    \ Algorithm
    \ AssembleOversetSolverConstraintAlgorithm
    \ EquationSystem
    \ LinearProblem
    \ LinearSolver
    \ LinearSolvers
    \ LinearSystem
    \ MasterElement
    \ OneDVector
    \ OversetInfo
    \ OversetManager
    \ Realm
    \ Realms
    \ Simulation
    \ SolverAlgorithm
    \ SolverFactory
    \ TpetraLinearSolver
    \ TpetraLinearSolverConfig

" Trilinos Types
syn keyword cType
    \ GO GlobalOrdinal
    \ LO LocalOrdinal
    \ NO Node
    \ SC Scalar

" Teuchos
syn keyword cDefine
    \ TEUCHOS_UNIT_TEST
    \ TEST_EQUALITY
    \ TEST_FLOATING_EQUALITY
syn keyword cType
