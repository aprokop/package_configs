<ParameterList name="MueLu">

  <!-- Configuration of the Xpetra operator (fine level) -->
  <ParameterList name="Matrix">
    <Parameter name="PDE equations"                         type="int" value="1"/> <!-- Number of PDE equations at each grid node.-->
  </ParameterList>

  <!-- Factory collection -->
  <!-- Note that ParameterLists must be defined prior to being used -->
  <ParameterList name="Factories">

    <ParameterList name="myBrickAggregationFact">
      <Parameter name="factory"                             type="string" value="BrickAggregationFactory"/>
      <Parameter name="bx"                                  type="int"    value="3"/>
      <Parameter name="by"                                  type="int"    value="3"/>
    </ParameterList>

    <ParameterList name="myCoarseMapFact">
      <Parameter name="factory"                             type="string" value="CoarseMapFactory"/>
      <Parameter name="Aggregates"                          type="string" value="myBrickAggregationFact"/>
    </ParameterList>

    <!-- =======================  TENTATIVE GALERKIN  ======================= -->
    <ParameterList name="myTentativePFact">
      <Parameter name="factory"                             type="string" value="TentativePFactory"/>
      <Parameter name="Aggregates"                          type="string" value="myBrickAggregationFact"/>
      <Parameter name="CoarseMap"                           type="string" value="myCoarseMapFact"/>
    </ParameterList>

    <ParameterList name="myUserPFact">
      <Parameter name="factory"                             type="string" value="UserPFactory"/>
      <Parameter name="mapFileName"                         type="string" value="data/map_coarse_epetra.mm"/>
      <!-- <Parameter name="mapFileName"                         type="string" value="data/map_coarse_tpetra.mm"/> -->
      <Parameter name="matrixFileName"                      type="string" value="data/P.mm"/>
    </ParameterList>

    <ParameterList name="mySaPFact">
      <Parameter name="factory"                             type="string" value="SaPFactory"/>
      <Parameter name="P"                                   type="string" value="myTentativePFact"/>
    </ParameterList>

    <ParameterList name="myPatternFact">
      <Parameter name="factory"                             type="string" value="PatternFactory"/>
      <Parameter name="P"                                   type="string" value="myUserPFact"/>
      <Parameter name="k"                                   type="int"    value="0"/>
    </ParameterList>
    <ParameterList name="myConstraintFact">
      <Parameter name="factory"                             type="string" value="ConstraintFactory"/>
      <Parameter name="Ppattern"                            type="string" value="myPatternFact"/>
      <!-- <Parameter name="FineNullspace"                       type="string" value="myNullspaceFact"/> -->
      <Parameter name="CoarseNullspace"                     type="string" value="myUserPFact"/>
    </ParameterList>
    <ParameterList name="myEminPFact">
      <Parameter name="factory"                             type="string" value="EminPFactory"/>
      <Parameter name="P"                                   type="string" value="myUserPFact"/>
      <Parameter name="Constraint"                          type="string" value="myConstraintFact"/>
      <Parameter name="Niterations"                         type="int"    value="2"/>
    </ParameterList>

    <!-- =======================  GALERKIN  ======================= -->

    <ParameterList name="mySaRFact">
      <Parameter name="factory"                             type="string" value="TransPFactory"/>
      <Parameter name="P"                                   type="string" value="mySaPFact"/>
    </ParameterList>

    <ParameterList name="myEminRFact">
      <Parameter name="factory"                             type="string" value="TransPFactory"/>
      <Parameter name="P"                                   type="string" value="myEminPFact"/>
    </ParameterList>

    <ParameterList name="myUserRFact">
      <Parameter name="factory"                             type="string" value="TransPFactory"/>
      <Parameter name="P"                                   type="string" value="myUserPFact"/>
    </ParameterList>

    <!-- =======================  COORDINATES  ======================= -->
    <ParameterList name="myCoordinatesTransferFact">
      <Parameter name="factory"                             type="string" value="CoordinatesTransferFactory"/>
      <!-- <Parameter name="RowMap"                              type="string" value="myRestrictorFact"/> -->
    </ParameterList>

    <ParameterList name="mySaRAPFact">
      <Parameter name="factory"                             type="string" value="RAPFactory"/>
      <Parameter name="P"                                   type="string" value="mySaPFact"/>
      <Parameter name="R"                                   type="string" value="mySaRFact"/>
    </ParameterList>

    <ParameterList name="myEminRAPFact">
      <Parameter name="factory"                             type="string" value="RAPFactory"/>
      <Parameter name="P"                                   type="string" value="myEminPFact"/>
      <Parameter name="R"                                   type="string" value="myEminRFact"/>
    </ParameterList>

    <ParameterList name="myUserRAPFact">
      <Parameter name="factory"                             type="string" value="RAPFactory"/>
      <Parameter name="P"                                   type="string" value="myUserPFact"/>
      <Parameter name="R"                                   type="string" value="myUserRFact"/>
    </ParameterList>

    <!-- =======================  SMOOTHERS  ======================= -->

    <ParameterList name="Chebyshev">
      <Parameter name="factory"                             type="string" value="TrilinosSmoother"/>
      <Parameter name="type"                                type="string" value="CHEBYSHEV"/>

      <ParameterList name="ParameterList">
        <Parameter name="chebyshev: degree"                 type="int"     value="2"/>>
        <!-- Ratio: 7 in 2D, 20 in 3D -->
        <Parameter name="chebyshev: ratio eigenvalue"       type="double"  value="20"/>
        <Parameter name="chebyshev: min eigenvalue"         type="double"  value="1.0"/>
        <Parameter name="chebyshev: zero starting solution" type="bool"    value="true"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <!-- Definition of the multigrid preconditioner -->
  <ParameterList name="Hierarchy">

    <Parameter name="numDesiredLevel"                       type="int"    value="3"/> <!-- Max number of levels -->
    <Parameter name="maxCoarseSize"                         type="int"    value="100"/> <!-- Min number of rows on coarsest level -->
    <Parameter name="verbosity"                             type="string" value="High"/>
    <!-- <Parameter name="dependencyOutputLevel"                 type="int"      value="0"/> -->

    <ParameterList name="DataToWrite">
       <Parameter name="Matrices"          type="string"   value="{1}"/>
       <!-- <Parameter name="Prolongators"      type="string"   value="{1,2}"/> -->
       <!-- <Parameter name="Restrictors"       type="string"   value="{1,2}"/> -->
    </ParameterList>

    <ParameterList name="Levels 0,1">
      <Parameter name="startLevel"                          type="int"    value="0"/>
      <Parameter name="numDesiredLevel"                     type="int"    value="2"/>
      <Parameter name="Smoother"                            type="string" value="Chebyshev"/>
      <Parameter name="P"                                   type="string" value="myEminPFact"/>
      <Parameter name="R"                                   type="string" value="myEminRFact"/>
      <Parameter name="A"                                   type="string" value="myEminRAPFact"/>
      <Parameter name="Nullspace"                           type="string" value="myUserPFact"/>
      <Parameter name="Coordinates"                         type="string" value="myUserPFact"/>
      <Parameter name="Aggregates"                          type="string" value="myBrickAggregationFact"/>
      <Parameter name="CoarseMap"                           type="string" value="myUserPFact"/>
    </ParameterList>

    <ParameterList name="Levels 2+">
      <Parameter name="startLevel"                          type="int"    value="2"/>
      <Parameter name="Smoother"                            type="string" value="Chebyshev"/>
      <Parameter name="P"                                   type="string" value="mySaPFact"/>
      <Parameter name="R"                                   type="string" value="mySaRFact"/>
      <Parameter name="A"                                   type="string" value="mySaRAPFact"/>
      <Parameter name="Nullspace"                           type="string" value="myTentativePFact"/>
      <Parameter name="Coordinates"                         type="string" value="myCoordinatesTransferFact"/>
      <Parameter name="Aggregates"                          type="string" value="myBrickAggregationFact"/>
      <Parameter name="CoarseMap"                           type="string" value="myCoarseMapFact"/>
      <Parameter name="CoarseSolver"                        type="string" value="DirectSolver"/>
    </ParameterList>

  </ParameterList>
</ParameterList>
